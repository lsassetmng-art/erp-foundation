<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTICE"
            android:textStyle="bold"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvRequestId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Domain / Severity / Confidence"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvDomain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/tvSeverity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/tvConfidenceBand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generated"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvGeneratedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rationale"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvRationale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evidence refs (json)"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvEvidenceRefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suggested action"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvSuggestedAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>
</ScrollView>
