<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lsam.MoneySelfManager">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Entry / Launcher -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Admin UI -->
        <activity android:name=".activities.admin.AdminMenuActivity" />
        <activity android:name=".activities.admin.ApprovalListActivity" />
        <activity android:name=".activities.admin.KillSwitchActivity" />
        <activity android:name=".activities.admin.AlertListActivity" />

    </application>

</manifest>
